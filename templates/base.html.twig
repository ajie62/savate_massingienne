<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        {% block header %}
            <ul>
                <li><a href="{{ path('home.index') }}">Accueil</a></li>
                <li><a href="{{ path('event.index') }}">Évènements</a></li>
                <li><a href="{{ path('news.index') }}">Actu</a></li>
                {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                    <li><a href="{{ path('user.profile', {username: app.user.username}) }}">Profil</a></li>
                    {% if is_granted('ROLE_ADMIN') %}
                        <li><a href="{{ path('admin.index') }}">Admin</a></li>
                    {% endif %}
                    <li><a href="{{ path('security.logout') }}">Déconnexion</a></li>
                {% else %}
                    <li><a href="{{ path('security.login') }}">Connexion</a></li>
                    <li><a href="{{ path('security.register') }}">Inscription</a></li>
                {% endif %}
            </ul>
        {% endblock %}

        {% block body %}{% endblock %}
        {% block javascripts %}
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        {% endblock %}
    </body>
</html>
