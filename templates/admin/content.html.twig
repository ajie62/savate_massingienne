{% extends 'admin/base.html.twig' %}

{% block admin_body %}
    {# Submitting the AssociationType form will print a flash message #}
    {% for message in app.flashes('notice') %}
        {{ message }}
    {% endfor %}

    <h1>Éditer le contenu du site</h1>

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button type="submit">Mettre à jour</button>
    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/admin/content.js') }}"></script>
{% endblock %}