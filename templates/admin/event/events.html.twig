{% extends 'admin/base.html.twig' %}

{% block admin_body %}
    <h1>admin.event</h1>

    {# include located in templates/includes #}
    <h2>Events in progress</h2>
    {% for event in eventsInProgress %}
        {{ include('includes/admin/event.html.twig') }}
    {% else %}
        <p>No event in progress</p>
    {% endfor %}

    <h2>Upcoming events</h2>
    {% for event in upcomingEvents %}
        {{ include('includes/admin/event.html.twig') }}
    {% else %}
        <p>No upcoming event</p>
    {% endfor %}

    <h2>Past events</h2>
    {% for event in pastEvents %}
        {{ include('includes/admin/event.html.twig') }}
    {% else %}
        <p>No past event</p>
    {% endfor %}

    <a href="{{ path('admin.index') }}">Back</a>
    <a href="{{ path('admin.event_create') }}">New event</a>
{% endblock %}