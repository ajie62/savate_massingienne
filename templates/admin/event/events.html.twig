{% extends 'admin/base.html.twig' %}

{% block admin_body %}
    <h1>Évènements</h1>

    {# include located in templates/includes/admin #}
    <h2>En cours</h2>
    {% for event in eventsInProgress %}
        {{ include('includes/admin/event.html.twig') }}
    {% else %}
        <p>Aucun évènement en cours.</p>
    {% endfor %}

    <h2>À venir</h2>
    {% for event in upcomingEvents %}
        {{ include('includes/admin/event.html.twig') }}
    {% else %}
        <p>Aucun évènement à venir.</p>
    {% endfor %}

    <h2>Terminés</h2>
    {% for message in app.flashes('warning') %}
        {{ message }}
    {% endfor %}

    {% for event in pastEvents %}
        {{ include('includes/admin/event.html.twig') }}
    {% else %}
        <p>Aucun évènement terminé.</p>
    {% endfor %}

    <a href="{{ path('admin.index') }}">Retour</a>
    <a href="{{ path('admin.event_create') }}">Nouvel évènement</a>
{% endblock %}