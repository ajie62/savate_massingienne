<footer class="website-footer">
    <div class="website-footer-content centered padding-left-right">
        <div class="location">
            <div>
                <span><i class="fa fa-map-marker fa-2x" aria-hidden="true"></i></span>
                {% if Association.address %}
                    <address>
                        {{ Association.address }}
                    </address>
                {% else %}
                    Aucune adresse renseignée
                {% endif %}
            </div>
            <div>
                <span><i class="fa fa-phone fa-2x" aria-hidden="true"></i></span>
                {% if Association.phoneNumber %}
                    <a href="tel:{{ Association.phoneNumber }}">{{ Association.phoneNumber }}</a>
                {% else %}
                    Aucun numéro de téléphone renseigné
                {% endif %}
            </div>
            <div>
                <span><i class="fa fa-envelope fa-2x" aria-hidden="true"></i></span>
                {% if Association.mail %}
                    <a href="mailto:{{ Association.mail }}">{{ Association.mail }}</a>
                {% else %}
                    Aucune adresse mail renseignée
                {% endif %}
            </div>
        </div>
        <div class="about">
            <div class="content">
                <h4>À propos</h4>
                <p class="text-justify">{{ Association.aboutUs|default('La description brève n\'existe pas encore.') }}</p>
            </div>
            <div class="social">
                <a href="{{ Association.facebookLink ? Association.facebookLink : '#' }}"><i class="fab fa-facebook fa-2x"></i></a>
            </div>
        </div>
    </div>
</footer>